{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"esModuleInterop": true,
		"lib": ["ES2020"],
		"rootDir": "./src",
		"outDir": "./build",
		"baseUrl": ".",
		"paths": {
			"@/*":["src/*"],
			"@api/*": ["src/api/*["],
			"@services/*": ["src/services/*"],
			"@utils/*": ["src/utils/*"],
			"@middleware/*": ["src/api/v1/middleware/*"],
			"@controllers/*": ["src/api/v1/controllers/*"],
			"@routes/*": ["src/api/v1/routes/*"],
			"@models/*": ["src/models/*"],
			"@config/*": ["src/config/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@auth/*": ["src/auth/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "build"]
}